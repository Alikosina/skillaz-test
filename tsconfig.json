{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "unknownProperties": "error",
          "emptyRules": "error",
          "zeroUnits": "error",
          "ieHack": "error",
          "important": "warning",
          "float": "warning"
        }
      }
    ],
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "jsx": "preserve",
    "target": "es2018"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
